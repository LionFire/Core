@page "/"

@using LionFire.Vos.Blazor.Data
@using LionFire.Referencing
@inject IRootManager  rootManager


@if (listings==null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var listing in listings)
            {
                <tr>
                    <td></td>
                    <td>@listing.Name</td>
                    <td>@listing.Type</td>
                </tr>
            }

        </tbody>
    </table>
}

@code {
    private Listing[] listings;

    protected override async Task OnInitializedAsync()
    {
        var root = rootManager.Get();
        var temp = root["/temp"];
        //var temp = root; // TODO: Ability to get list of vob children from a Vob

        var hList = temp.Reference.GetListHandle();
        var result = await hList.Resolve();
        listings = result.Value.Value?.ToArray() ?? Array.Empty<Listing>();

    }
}
