<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/lionfire/Core</RepositoryUrl>
    <Version>2.0.51</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageTags>BCL extensions utility</PackageTags>
    <Authors>Jared Thirsk</Authors>
    <Company>LionFire Games</Company>
    <Description>Simple extensions and additions to .NET Base Class Library (BCL) classes.</Description>
    <Copyright>2010-2020 Jared Thirsk</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GitVersionTask" Version="5.3.7">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Content Include="README.txt">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </Content>
  </ItemGroup>
  
</Project>
