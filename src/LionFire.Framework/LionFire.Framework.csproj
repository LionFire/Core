<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>LionFire</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Version>2.0.0</Version>
    <Description>Functionality built on top of the set of cohesive mini-frameworks that are commonly used in LionFire applications, for application management, object instantiating, and other things.</Description>
    <RepositoryUrl>https://github.com/lionfire/core</RepositoryUrl>
    <PackageTags>lionfire</PackageTags>
    <AssemblyVersion>2.0.0.0</AssemblyVersion>
    <FileVersion>2.0.0.0</FileVersion>
    <Company>Jared Thirsk</Company>
  </PropertyGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="dotnet-codegen" Version="0.4.11" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\LionFire.Applications\LionFire.Applications.csproj" />
    <ProjectReference Include="..\LionFire.Assets.Abstractions\LionFire.Assets.Abstractions.csproj" />
    <ProjectReference Include="..\LionFire.Assets\LionFire.Assets.csproj" />
    <ProjectReference Include="..\LionFire.Base\LionFire.Base.csproj" />
    <ProjectReference Include="..\LionFire.Core\LionFire.Core.csproj" />
    <ProjectReference Include="..\LionFire.Execution.Abstractions\LionFire.Execution.Abstractions.csproj" />
    <ProjectReference Include="..\LionFire.Execution\LionFire.Execution.csproj" />
    <ProjectReference Include="..\LionFire.Instantiating.Abstractions\LionFire.Instantiating.Abstractions.csproj" />
    <ProjectReference Include="..\LionFire.Instantiating\LionFire.Instantiating.csproj" />
    <ProjectReference Include="..\LionFire.Structures\LionFire.Structures.csproj" />
  </ItemGroup>

</Project>
